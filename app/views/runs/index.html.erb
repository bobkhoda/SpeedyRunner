<p id="notice"><%= notice %></p>
<div class = "runs">
  <h1>Listing Runs</h1>
  <div class = "table-responsive">
    <table class = "table table-hover mytable table-striped table-condensed">
      <thead>
        <tr>
          <th>Miles</th>
          <th>Date run</th>
          <th>Where</th>
          <th>Time run</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody class = "table table-hover">
        <% @runs_all.each do |run| %>
          <tr>
            <td><%= run.miles %></td>
            <td><%= run.date_run %></td>
            <td><%= run.where %></td>
            <td><%= run.time_run %></td>
            <td><%= link_to 'Show', run %></td>
            <td><%= link_to 'Edit', edit_run_path(run) %></td>
            <td><%= link_to 'Destroy', run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        <tr>
          <td><b><%= @runs_total_miles %></b></td>
          <td></td>
          <td></td>
          <td><b><%= @runs_total_time %></b></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class = "runs">
  <%= link_to "New Run", new_run_path, class:"btn btn-default" %>
</div>
<%= month_calendar attribute: :date_run, events: @runs_all do |date, runs| %>
  <%= date.day %>

  <% runs.each do |run|%>
    <div>
      <%= run.miles %>
    </div>
  <% end %>
<% end %>
